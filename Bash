# Update package lists and install required packages
sudo apt-get update -y
sudo apt-get install apt-transport-https ca-certificates gnupg -y

# Add the Google Cloud public key directly to keyrings
curl -sSL https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo tee /usr/share/keyrings/cloud.google.gpg > /dev/null

# Add Cloud SDK to sources list with signed-by option
echo "deb [signed-by=/usr/share/keyrings/cloud.google.gpg] https://packages.cloud.google.com/apt cloud-sdk main" | sudo tee /etc/apt/sources.list.d/google-cloud-sdk.list

# Update package lists and install the Google Cloud SDK
sudo apt-get update -y
sudo apt-get install google-cloud-sdk -y
